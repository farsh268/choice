<%- include("./partials/header"); %>
 <div class="form p-4 mt-4 h-auto ">
  <div class="container mb-5">
    <h3 class="text-center header">
      <span style="display: block"> Commence Voting </span>
      <span  class="mt-2 d-block text-secondary span2" style="font-size: 14px;">
        Select either of the available two Addresses
      </span>
    </h3>
    
  </div>
  <div class="d-flex justify-content-center flex-column align-items-center">
    <div class="text-center text-success" id="notification"></div>
    <div class="mb-3 p-4 box">
        <div class="vote mb-3 mt-2">
          <label class="text-primary border border-primary vote--section" id="vote--section1">
            Blue Address
            <input type="radio" name="option" value="blue" id="blue" />
          </label>
        </div>
        <div class="vote mb-4">
          <label class="text-danger border border-danger vote--section" id="vote--section2"
            >Red Address
            <input type="radio" name="option" id="red" value="red" />
          </label>
          <br />
        </div>

        <div class="text-center mb-4">
          <input
            id="option-input"
            type="text"
            class="blue text-center"
            placeholder="Enter Amount"
          />
        </div>
        <div class="text-center b-3 mb-2" id="submit">
          <button
            class="btn btn-primary btn-md mt-3"
            id="submit"
            onclick="myAlgoWalletConnect()"
          >
            Connect Wallet
          </button>
        </div>      
    </div>
  </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/algosdk@1.13.0-beta.1/dist/browser/algosdk.min.js"></script>
    <script src="/js/script.js"></script>
    <script src="/js/algo.js"></script>
    <script src="/js/algowallet.js"></script>

    <script>
      $(document).ready(function () {
    // Close modal on button click
    $(".mode").click(function () {
    $("#exampleModalCenter").modal("hide");
  });
});

    </script>

  </body>
</html>
